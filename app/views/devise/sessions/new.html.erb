<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">CTRP RailApp test</a>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">

        <li><a href="#">Dashboard</a></li>
        <% if local_user_signed_in? %><li>Current Local User is <%= current_local_user.username %><li/> <% end %>
        <li><a href="#">Profile</a></li>
        <% if local_user_signed_in? %>
            <li><%= link_to 'Sign out', destroy_session_path, method: :delete %></li>
        <% end %>
      </ul>
      <form class="navbar-form navbar-right">
        <input type="text" class="form-control" placeholder="Search...">
      </form>
    </div>
  </div>
</nav>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <li class="active"><a href="#">Overview <span class="sr-only">(current)</span></a></li>
        <li><%= link_to "List Users", users_path %></li>
        <li><%= link_to "Sign In", new_session_path %></li>
        <li><a href="/ctrp/local_users/sign_up">Sign Up</a></li>
        <%= link_to "Change your password", edit_local_user_registration_path %>
        <% if local_user_signed_in? %>
            <li><%= link_to 'Edit User ', edit_local_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">


      <div class="table-responsive">
        <%= form_for(resource, :as => 'user', url: create_session_path) do %>
            <%= hidden_field_tag :source, "Rails" %>
            <fieldset>
              <legend>Log In</legend>
              <table>
                <tr>
                  <td>
                    <label>Username </label>
                    <input type="text" placeholder="Username or Email" name="user[username]" />
                  </td>
                  <td>
                    <label>Password</label>
                    <input type="password" placeholder="Password" name="user[password]" />
                    <input type="submit" class="button" value="Log In" />
                  </td>
                </tr>
              </table></fieldset>
        <% end %>
      </div>




      <h1 class="page-header">List CTRP Users</h1>


      <h2 class="sub-header"><% if local_user_signed_in? %> <b>Current Local User is <%= current_local_user.username %></b><br/> <% end %></h2>


    </div>
  </div>
</div>

