<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">CTRP RailApp test</a>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">

        <li><a href="#">Dashboard</a></li>
        <% if local_user_signed_in? %><li>Current Local User is <%= current_local_user.username %><li/> <% end %>
        <li><a href="#">Profile</a></li>
        <% if local_user_signed_in? %>
            <li><%= link_to 'Sign out', destroy_session_path, method: :delete %></li>
        <% end %>
      </ul>
      <form class="navbar-form navbar-right">
        <input type="text" class="form-control" placeholder="Search...">
      </form>
    </div>
  </div>
</nav>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <li class="active"><a href="#">Overview <span class="sr-only">(current)</span></a></li>
        <li><%= link_to "List Users", users_path %></li>
        <li><%= link_to "Sign In", new_session_path %></li>
        <li><a href="/ctrp/local_users/sign_up">Sign Up</a></li>
        <% if local_user_signed_in? %>
            <li><%= link_to 'Edit User ', edit_local_user_registration_path %></li>
            <li><%= link_to "Change your password", edit_local_user_registration_path %></li>
            <% if current_local_user.role == "ROLE_SUPER" %>
              <li><%= link_to "BackOffice", backoffice_path %></li>
            <% end %>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <h1 class="page-header">List CTRP Users</h1>


      <h2 class="sub-header"><% if local_user_signed_in? %> <b>Current Local User is <%= current_local_user.username %> with Role <%= current_local_user.role %></b><br/> <% end %></h2>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
          <tr>
          <tr>
            <th colspan="3">Username</th>
            <th colspan="3">Email</th>
            <th colspan="3">Type</th>
            <th colspan="3">Role</th>
            <th colspan="*">Approval</th>
          </tr>
          </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
              <tr>
                <td colspan="3"><%= user.username %></td>
                <td colspan="3"><%= user.email %></td>
                <td colspan="3"><%= user.type %></td>
                <td colspan="*"><%= user.role %></td>
                <% if user.approved == false %>
                  <td colspan="*">
                    <%= button_to [:approve, user.becomes(User)] do %>
                        <strong  class="btn btn-sm btn-success">Enable</strong>
                    <% end %>
                  </td>
                <% end %>
                <% if user.approved == true %>
                    <td colspan="*">
                      <%= button_to [:disapprove, user.becomes(User)] do %>
                          <strong class="btn btn-sm btn-danger">Disable</strong>
                      <% end %>
                    </td>
                <% end %>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

