<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">CTRP User Portal</a>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">


        <% if local_user_signed_in? %><li><a class="navbar-brand" href="#">Current Local User is <%= current_local_user.username %></a><li/> <% end %>
        <% if local_user_signed_in? %>
            <li><%= link_to 'Sign out', destroy_session_path, method: :delete %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <li class="active"><a href="#">Overview <span class="sr-only">(current)</span></a></li>
        <br/><br/>
        <% if local_user_signed_in? ||  ldap_user_signed_in? %>
            <li><%= link_to "List Users", users_path %></li>
            <li><%= link_to "Assign Organization", search_organizations_path %></li>
            <% if current_local_user.role == "ROLE_SUPER" %>
                <li><%= link_to "BackOffice", backoffice_path %></li>
            <% end %>
            <!--li><!--%= link_to 'Edit User ', edit_user_path(current_local_user.username) %></li-->
        <% end %>
        <% if !local_user_signed_in? &&  !ldap_user_signed_in? %>
            <li><%= link_to "Sign In", new_session_path %></li>
            <li><a href="/ctrp/local_users/sign_up">Sign Up</a></li>
        <% end %>
        <% if local_user_signed_in? %>
            <!--li><!--%= link_to "Change your password", edit_local_user_registration_path %></li-->
        <% end %>
      </ul>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">


      <h3 class="header">
        <% if local_user_signed_in? || ldap_user_signed_in? %>

            <b>Current User: <%= current_local_user.username %> </b>
            , Role: <%= current_local_user.role %>
            <% unless current_local_user.organization_id.blank? %>
                , Organization: <%= current_local_user.organization.name %>
            <% end %>
            <br/>
        <% end %>
        <% if ldap_user_signed_in? %> <b>Current LDAP User is <%= current_ldap_user.username %> with Role <%= current_ldap_user.role %></b><br/> <% end %>
      </h3>

      <% unless @users.blank? %>
              <h3 class="page-header">List CTRP Users</h3>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
              <tr>
              <tr>
                <th colspan="2">Username</th>
                <th colspan="3">Type</th>
                <th colspan="3">Role</th>
                <th colspan="3">Privileges</th>
                <th colspan="3">Organization</th>
                <th colspan="*">Approval</th>
              </tr>
              </tr>
              </thead>
              <tbody>

              <% @users.each do |user| %>
                  <tr>
                    <td colspan="2"><%= user.username %></td>
                    <td colspan="3"><%= user.type %></td>
                    <td colspan="3"><%= user.role %></td>
                    <% unless user.role.blank? %>
                        <td colspan="3" class="success">
                          <%= user.get_privileges.collect{|x| x[:type]} %> &nbsp;
                        </td>
                     <% else %>
                        <td colspan="3"> &nbsp; </td>
                     <% end %>
                    <% unless user.organization_id.blank? %>
                        <td colspan="3" class="info"><%= user.organization.name %>&nbsp; </td>
                    <% else %>
                        <td colspan="3"> &nbsp; </td>
                    <% end %>
                    <% if user.approved == false %>
                        <td colspan="3">NOT APPROVED</td>
                      <td colspan="3">
                        <%= button_to [:approve, user.becomes(User)] do %>
                            <strong  class="btn btn-sm btn-primary">Approve</strong>
                        <% end %>
                      </td>
                    <% end %>
                    <% if user.approved == true %>
                        <td colspan="3">APPROVED</td>
                        <td colspan="3">
                          <%= button_to [:disapprove, user.becomes(User)] do %>
                              <strong class="btn btn-sm btn-danger">Disable</strong>
                          <% end %>
                        </td>
                    <% end %>
                  </tr>
              <% end %>
           <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

